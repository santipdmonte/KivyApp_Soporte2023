BoxLayout:
    orientation: 'vertical'
    spacing: 10

    Label:
        text: 'Nameeeeeeee:'

    TextInput:
        id: name_input
        multiline: False

    Label:
        text: 'Age:'

    TextInput:
        id: age_input
        input_filter: "float"
        multiline: False

    Label:
        text: 'Sex (M/F):'

    TextInput:
        id: sex_input
        multiline: False

    Button:
        text: 'Save'
        on_release: root.save_person()

    BoxLayout:
        id: person_list
        orientation: 'vertical'
        spacing: 10